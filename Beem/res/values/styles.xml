<!-- Old PC style -->

	<style name="OldTheme">
		<item name="android:textViewStyle" >@style/OldThemeTextView</item>
	</style>
	<style name="OldThemeTextView" parent="@android:style/Widget.TextView">
		<item name="android:textColor">#ff009900</item>
